<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/relitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/frame_round_flatb"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="1.00dp"
            android:background="@drawable/frame_round_flat">

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:text="Tarea"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#202020"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewUsername2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewUsername"
                android:layout_alignStart="@+id/textViewUsername"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:text="Cliente"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#202020"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewUsername3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewUsername2"
                android:layout_alignStart="@+id/textViewUsername2"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:text="Fecha"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#202020"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewUsername4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewUsername2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/color_gray_grad"
                android:gravity="center_horizontal"
                android:minWidth="100dp"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:text="Estado"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
